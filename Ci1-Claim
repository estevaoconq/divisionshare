    <script>
    // Fun√ß√£o para atualizar o valor do ativo em tempo real
    function updateAssetValue() {
        const initialValue = 1000000;
        const supply = 1000000; // Total supply de tokens
        const annualRate = 0.12; // 12% ao ano
        const issueDate = new Date('2024-02-01');
        
        setInterval(() => {
            const now = new Date();
            const elapsedMilliseconds = now - issueDate;
            const elapsedDays = Math.floor(elapsedMilliseconds / (1000 * 60 * 60 * 24));
            const elapsed = elapsedMilliseconds / (1000 * 60 * 60 * 24 * 365); // Anos decorridos desde a emiss√£o
            
            // Atualiza o n√∫mero de dias decorridos
            document.getElementById('days-elapsed').textContent = `${elapsedDays} days`;
            
            const currentValue = initialValue * (1 + (annualRate * elapsed));
            const tokenValue = currentValue / supply;

            // Atualiza o valor total do ativo
            document.getElementById('current-value').textContent = 
                `$${currentValue.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2})}`;

            // Atualiza o valor por token
            document.getElementById('token-value').textContent = 
                `$${tokenValue.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2})}`;
        }, 1000);
    }

    // Iniciar atualiza√ß√µes
    document.addEventListener('DOMContentLoaded', () => {
        updateAssetValue();
    });
    </script>

